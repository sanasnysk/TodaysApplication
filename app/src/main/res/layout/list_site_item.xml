<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="false"
    android:background="@drawable/list_background"
    android:layout_margin="2dp"
    android:padding="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="6"
        android:background="@color/blue_200">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="110dp"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="1.5"
            android:layout_marginLeft="2dp"
            android:scaleType="centerCrop"
            android:src="@drawable/img_s0002"
            tools:ignore="ContentDescription,RtlHardcoded" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="1.5"
            android:weightSum="4"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">

            <TextView
                android:id="@+id/site_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="현  장"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="center"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,NestedWeights,RtlCompat" />

            <TextView
                android:id="@+id/site_leader_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="회사/팀"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="center"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:id="@+id/site_date_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="등록일자"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="center"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:id="@+id/site_pay_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="일  당"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="center"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="3"
            android:weightSum="4"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp">

            <TextView
                android:id="@+id/site_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="Site Name"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,NestedWeights,RtlCompat" />

            <TextView
                android:id="@+id/site_leader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="Team Leader"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:id="@+id/site_day"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="Site Date"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

            <TextView
                android:id="@+id/site_pay"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="2dp"
                android:layout_margin="1dp"
                android:text="Site Pay"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:lines="1"
                android:textAlignment="textStart"
                android:background="@color/white"
                android:gravity="center_horizontal"
                tools:ignore="HardcodedText,RtlCompat" />

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_margin="1dp"
        android:padding="1dp"
        android:background="@drawable/cardview_background"
        tools:ignore="DisableBaselineAlignment">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="3dp"
            android:layout_weight="1"
            android:scaleType="centerCrop"
            android:src="@drawable/img_00015s"
            tools:ignore="ContentDescription,ImageContrastCheck" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:layout_marginEnd="5dp"
            android:orientation="vertical"
            android:gravity="center_vertical"
            tools:ignore="UselessLeaf">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="8"
                android:padding="1dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/journal_site_name_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="현장"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:text="Site Name"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/journal_totalday_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="공수"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_total_day"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="day"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_amount_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="금액"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_amount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Site Amount"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="1dp"
                android:orientation="horizontal"
                android:weightSum="8">

                <TextView
                    android:id="@+id/journal_site_collect_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/leaders"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:gravity="center_horizontal" />

                <TextView
                    android:id="@+id/journal_site_collect"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Team Leader"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_cost_txt"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="경비"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:layout_marginEnd="1dp"
                    android:textAlignment="center"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

                <TextView
                    android:id="@+id/journal_site_cost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:text="Site Cost"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:lines="1"
                    android:maxLines="1"
                    android:textAlignment="textStart"
                    android:background="@color/white"
                    android:gravity="center_horizontal"
                    tools:ignore="HardcodedText,RtlCompat" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>